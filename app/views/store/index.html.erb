<div class="span9">
<div class="page-header">
<h2>Your Pragmatic Catalog</h2>
</div>

<ul class="thumbnails">
 <li class="thumbnails">
    <div class="thumbnails">
<% @products.each do |product| %>


 
    <%= image_tag(product.image_url, :class => "img-polaroid")%>
    
    <h3><%= product.title %></h3>

    <%= sanitize(product.description) %>
    <span class="price"><br><br><p class="price">Price:&nbsp;<%= number_to_currency(product.price) %></p></span>
    <%= button_to 'Add to Cart ', line_items_path(:product_id => product), id: "btn", class: "btn btn-primary", remote: true%>
    

<% end %>
</div>
    </li>
</ul>

</div>
