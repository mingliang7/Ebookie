<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
  <div class="alert">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
    <div id="error_explanation">
      <strong><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</strong>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    </div>
  <% end %>
<div class="well">
  <div class="controls ">
  <%= f.label :Name %>
    <%= f.text_field :name, :class => "span5" , :placeholder => "Name", size: 40%>

  </div>
  <div class="controls">
      <%= f.label :Email %>
        <%= f.email_field :email, :class => "span5", :placeholder => "Email", size: 40 %>
  </div>

  <div class="controls">
    <%= f.label :address %>
    <%= f.text_area :address, :class => "span5", placeholder: "write your address here...."%>
  </div>
  <div class="field">

  </div>
  <div class="field">
    <%= f.label :pay_type %>
    <%= f.select :pay_type, Order::PAYMENT_TYPES, :prompt => "Select payment methods" %>
  </div>
  <div class="actions">
    <%= f.submit 'Place Order',  :class => "btn  btn-primary" %>
  </div>
<% end %>
</div>